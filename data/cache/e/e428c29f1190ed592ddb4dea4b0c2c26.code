&nbsp;
<span class="co0">################</span>
<span class="co0"># GDAL, gdalinfo</span>
<span class="co0">#gdalinfo $home_dir&quot;/input/worldclim/current/wc_5m_10km/alt.bil&quot;</span>
gdalinfo <span class="st0">&quot;./input/worldclim/current/wc_5m/alt.bil&quot;</span>
